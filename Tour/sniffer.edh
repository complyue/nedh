
import * 'net'

# %%
sniffer = Sniffer(

  # sniffer module
  'net/demo/sniffer',

  # addr/port to sniff on
  '0.0.0.0', 3721,

  # sniffer module initializer
  init= modu => {
    modu.purpose = 'demo'
  },

)

console.info<| 'Sniffing ...'

# %%

# following line keeps the sniffer running when this file
# is redirected as stdin to Nedh interpreter, if running
# interactively, you'd better not paste following content
# to the repl, or you can only Ctrl^C to kill the repl
sniffer.join()
