# loop forever until eol on error, or stopped elsewhere
while eol() is false {

  # note nil result from `sniff()` is silently ignored
  case sniff() of { cmdVal } -> {
    console.info<| 'Sniffed cmd:\n  ' ++ cmdVal
  }

} $=> { exc } -> {
  console.error<| 'Error sniffing: ' ++ desc( exc )
}
